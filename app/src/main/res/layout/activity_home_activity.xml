<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="@color/White"
android:orientation="vertical"
android:padding="5dp" >

<!-- android:background="@drawable/gradient_btn" -->

<LinearLayout
    android:id="@+id/linearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="vertical" >

    <Button
        android:id="@+id/registorchild1"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_margin="2dp"
        android:background="#12b2b2"
        android:drawableRight="@drawable/sad9"
        android:paddingRight="15dp"
        android:text="Register Child"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fafafa" />

</LinearLayout>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="vertical" >

    <Button
        android:id="@+id/update_child_info"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_margin="2dp"
        android:background="#0099FF"
        android:drawableRight="@drawable/sad9"
        android:paddingRight="15dp"
        android:text="Update Child Info"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fafafa" />

</LinearLayout>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="vertical" >

    <Button
        android:id="@+id/scancard12"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="2dp"
        android:background="#32ac71"
        android:drawableRight="@drawable/card"
        android:paddingRight="15dp"
        android:text="Scan Card"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fafafa" />

</LinearLayout>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="vertical" >

    <Button
        android:id="@+id/scancard1"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:background="#0288d1"
        android:drawableRight="@drawable/football92"
        android:paddingRight="30dp"
        android:text="Lost Card"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fafafa" />

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="vertical" >

    <Button
        android:id="@+id/plan_button"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:background="#109169"
        android:drawableRight="@drawable/football92"
        android:paddingRight="30dp"
        android:text="Plan My Day !"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fafafa" />
</LinearLayout>

</LinearLayout>