<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:weightSum="3"
        android:layout_marginLeft="10dp"
        android:layout_gravity="left"
        android:gravity="left"
        android:layout_weight="1">

        <TextView
            android:id="@+id/secondtab_row_childID"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Child ID"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_gravity="left" />

        <TextView
            android:id="@+id/secondtab_row_childName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Child Name"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_gravity="left" />

        <TextView
            android:id="@+id/secondtab_row_fatherName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Father Name"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_gravity="left" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:weightSum="3"
        android:layout_marginRight="10dp"
        android:layout_gravity="end"
        android:gravity="right"
        android:layout_weight="1">

        <TextView
            android:id="@+id/secondtab_row_status"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Status"
            android:layout_gravity="right"
            android:gravity="center"
            android:layout_weight="2"
            android:layout_marginRight="25dp" />

        <Button
            android:id="@+id/secondtab_row_details"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Details"
            android:layout_gravity="right"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>