<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="vertical" >

<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/White"
        android:orientation="vertical"
        android:padding="10dip" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Child Name: "
                android:textSize="17sp" />

            <EditText
                android:id="@+id/childNameRegisterChild"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="25"
                android:paddingLeft="10dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textAlignment="center"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/male"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:checked="true"
                        android:text="@string/male"
                        android:textColor="@color/Black"
                        android:layout_gravity="right" />

                    <RadioButton
                        android:id="@+id/female"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="@string/female"
                        android:textColor="@color/Black"
                        android:layout_gravity="right" />

                </RadioGroup>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Date of Birth: "
                android:textSize="17sp" />

            <EditText
                android:id="@+id/dateofBirthRegisterChild"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="2014-05-01"
                android:inputType="date"
                android:maxLength="10"
                android:minHeight="45dp"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Father Name: "
                android:textSize="17sp"
                android:layout_marginTop="10dp" />


            <EditText
                android:id="@+id/fatherNameRegisterChild"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="25"
                android:minHeight="45dp"
                android:paddingLeft="10dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Father CNIC"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/fatherCnicRegisterChild"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="32106-3445556-2"
                android:maxLength="15"
                android:minHeight="45dp"
                android:paddingLeft="10dp"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="17sp"
                android:text="Father Mobile # " />

            <EditText
                android:id="@+id/fatherMobileRegisterChild"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="13"
                android:minHeight="45dp"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:layout_marginTop="10dp"
                android:text="Address: " />

            <EditText
                android:id="@+id/addressRegisterChild"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:minHeight="45dp"
                android:singleLine="false" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="17sp"
                android:text="District   "
                android:gravity="center" />

            <Spinner
                android:id="@+id/districtSpinnerRegisterChild"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:maxLength="50"
                android:minHeight="45dp"
                android:prompt="@string/districtpromespinner"
                android:entries="@array/DistrictNames" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="17sp"
                android:text="Tehseel  "
                android:gravity="center" />

            <Spinner
                android:id="@+id/tehseelSpinnerRegisterChild"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="45dp"
                android:prompt="@string/tehseelpromespinner"
                android:entries="@array/Rahim_Yar_Khan_Tehseelname"/>
        </LinearLayout>

        <Button
            android:id="@+id/BtnChildRecordSubmit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:text="Register"
            android:textStyle="bold"
            android:minHeight="45dp"
            android:textColor="@color/white"
            android:background="@drawable/circular_button"
            />


    </LinearLayout>

</ScrollView>

</LinearLayout>