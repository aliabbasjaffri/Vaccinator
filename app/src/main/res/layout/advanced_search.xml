<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Advanced Search"
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/advancedSearch_childName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Child Name"
        android:padding="10dp"
        android:gravity="center"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <RadioGroup
            android:id="@+id/advancedSearch_radioGroupGender"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/advancedSearch_radioButtonMale"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:checked="true"
                android:text="Male" />

            <RadioButton
                android:id="@+id/advancedSearch_radioButtonFemale"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Female" />
        </RadioGroup>
    </LinearLayout>

    <EditText
        android:id="@+id/advancedSearch_fatherName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Father Name"
        android:padding="10dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/advancedSearch_fatherCNIC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Father CNIC"
        android:padding="10dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/advancedSearch_fatherMobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Father Mobile Number"
        android:padding="10dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/advancedSearch_districtSpinner2"
        android:layout_gravity="center_horizontal"
        android:entries="@array/DistrictNames"
        android:minHeight="25dp"
        android:layout_marginTop="15dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/advancedSearch_tehsilSpinner2"
        android:layout_gravity="center_horizontal"
        android:minHeight="25dp"
        android:layout_marginTop="15dp" />
</LinearLayout>